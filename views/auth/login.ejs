<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body class="d-flex flex-column min-vh-100 p-2">
    <main>
      <div class="container">
        <div class="row mb-3">
          <div class="col-4 offset-4 text-center">
            <h1>Login Page</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-4 offset-4 text-center">
            <div class="card">
              <div class="card-header">Login Form</div>
              <div class="card-body">
                <form action="/auth/login" method="POST">
                  <div class="mb-3 text-center">
                    <label for="email-reg" class="form-label">Email</label>
                    <input
                      type="text"
                      class="form-control"
                      id="email-reg"
                      name="email"
                      value=""
                    />
                  </div>
                  <div class="mb-3">
                    <label for="password-reg" class="form-label"
                      >Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      y
                      id="password-reg"
                      name="password"
                      value=""
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <% if (message) { %>
                <small class="alert alert-danger mt-4"><%= message %></small>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="mt-auto"><%- include('../partials/footer'); %></footer>
  </body>
</html>

<% const totalElements = 4; const placeholdersNeeded = totalElements -
lastTickets.length; lastTickets.forEach(ticket => { %>

<div class="col">
  <div class="card h-100">
    <div class="card-body">
      <h5 class="card-title text-center">
        <span style="font-weight: 900; color: <%= ticket.service_color %>">
          <%= ticket.ticket_code %></span
        >
        <br />
        <span style="font-weight: 300; font-style: italic; font-size: 0.9rem">
          <%= ticket.customer_name %></span
        >
      </h5>
      <div
        style="display: flex; justify-content: space-between; margin-top: 40px"
      >
        <div><%= ticket.desk_name %></div>
        <div>
          <span
            class="badge"
            style="background-color: <%= ticket.service_color %>"
          >
            <%= ticket.service_name %>
          </span>
        </div>
      </div>
    </div>
    <div class="card-footer text-center">
      <small class="text-body-secondary">
        Chiamato alle <%= formatTime(ticket.called_at) %>
      </small>
    </div>
  </div>
</div>

<% }); for (let i = 0; i < placeholdersNeeded; i++) { %>

<div class="col">
  <div class="card h-100">
    <div class="card-body">
      <h5 class="card-title text-center">
        <span style="font-weight: 900; color: #ccc"></span>
        <br />
        <span style="font-weight: 300; font-style: italic; font-size: 0.9rem">
        </span>
      </h5>
      <div
        style="display: flex; justify-content: space-between; margin-top: 40px"
      >
        <div></div>
        <div></div>
      </div>
    </div>
    <div class="card-footer text-center">
      <small class="text-body-secondary"> - </small>
    </div>
  </div>
</div>

<% } %>

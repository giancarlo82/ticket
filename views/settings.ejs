<%- include('./partials/head') %> <%- include('./partials/navbar', { desks:
desks, user_name: user_name, page: 'settings' }) %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Settings</h1>
      <form action="/settings" method="post">
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= user_name %>"
              required
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              value="<%= user_email %>"
              required
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="password" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
          </div>
        </div>

        <%- include('./partials/footer') %>
      </form>
    </div>
  </div>
</div>
